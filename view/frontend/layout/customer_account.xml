<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Qoliber\Psl\Block\Customer\Account\ProfileLink" name="psl.profile.link"
                   ifconfig="qoliber_psl/general/enabled"
            >
                <arguments>
                    <argument name="path" xsi:type="string">psl/customer/profile</argument>
                    <argument name="sort_order" xsi:type="string">230</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
